# App Configuration
NEXT_PUBLIC_APP_URL=https://your-app.builddetroit.xyz

# Database Configuration
# Set USE_LOCAL=true to force local SQLite database (useful for development)
# When false or unset, will use Turso if credentials are provided
USE_LOCAL=true
LOCAL_DB_PATH=./dev.sqlite3

# Database (Turso) - Remote database credentials
# Only used when USE_LOCAL=false and credentials are provided
TURSO_DATABASE_URL=
TURSO_AUTH_TOKEN=

# Renaissance API
RENAISSANCE_API_URL=https://api.renaissance.city

# Renaissance People API Integration
# URL of the deployed renaissance-people app
RENAISSANCE_PEOPLE_API_URL=https://people.renaissance.city
# Shared API key for authentication (must match PEOPLE_API_KEY in renaissance-people)
RENAISSANCE_PEOPLE_API_KEY=

# DigitalOcean Spaces (for profile image uploads)
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_ACCESS_KEY_ID=
DO_SPACES_SECRET_ACCESS_KEY=
DO_SPACES_BUCKET_NAME=
DO_SPACES_REGION=nyc3
DO_SPACES_CDN_URL=

# OpenAI (for voice transcription)
OPENAI_API_KEY=

# Resend (for email notifications)
RESEND_API_KEY=
